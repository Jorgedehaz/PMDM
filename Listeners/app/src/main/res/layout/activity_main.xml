<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Usas Google Crhomre?"
        android:textSize="30dp"
        android:padding="25dp"
        android:gravity="center_horizontal">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">
        <Button
            android:id="@+id/btnclaseinterna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clase interna"
            android:layout_columnWeight="1"
            android:onClick="onClickBtn"/>
        <Button
            android:id="@+id/btnclaseanonima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clase anónima"
            android:layout_columnWeight="1"
            android:onClick="onClickBtn"/>
        <Button
            android:id="@+id/btn3en1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método 3 en 1"
            android:layout_columnWeight="1"
            android:onClick="onClickBtn"/>
        <Button
            android:id="@+id/btnimplements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método implements"
            android:layout_columnWeight="1"
            android:onClick="onClickBtn"/>
    </LinearLayout>

    <TextView
        android:id="@+id/respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:padding="25dp"
        android:gravity="center_horizontal">
    </TextView>
</LinearLayout>